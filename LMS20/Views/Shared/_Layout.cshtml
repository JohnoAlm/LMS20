@using LMS20.Core.Entities
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS20</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS20.styles.css" asp-append-version="true" />   
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=KoHo" />   
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        @*INloggningsbar*@
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black nav-height border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Brandname</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                    <partial name="_LoginPartial" />     
            </div>
        </nav>
        @*Styrningsnavbar*@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm nav-color border-bottom box-shadow mb-3">
             
            <div class="container-fluid ">
                @*<P class=" m-5 title text-white" asp-area="">KURS 101</P>*@
               <div class = "title text-white">KURS 101 </div> @*@Html.DisplayFor(Course.Name)*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white "  asp-area="" asp-controller="Home" asp-action="Index"><i class="central  bi bi-speedometer2"></i><div class="central-text">Dashboard</div></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Modules"><i class=" central2 bi bi-x-diamond-fill"></i><div class="central-text">Modules</div></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Participants"><i class="central bi bi-person-fill"></i><div class="central-text">Participants</div></a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container footer">
            &copy; 2022 - LMS20 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
