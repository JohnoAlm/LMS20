@model RegistrationViewModel
 
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Lägg till en ny elev</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id = "addstudentform" name = "addstudentform" asp-controller = "Courses" asp-action = "RegisterUser">
                <div asp-validation-summary = "ModelOnly" class = "text-danger"></div>
                <input type = "hidden" asp-for = "RegistrationInValid" />
            
                <div class = "my-3 form-group row">
                    <label asp-for = "Email" class = "col-md-4 col-form-label"></label>
                    <div class = "col-md-8">
                        <input asp-for = "Email" placeholder = "Email address" class = "form-control" />
                        <span asp-validation-for = "Email" class = "text-danger"></span>
                    </div>
                </div>

                <div class = "my-3 form-group row">
                    <label asp-for = "Password" class = "col-md-4 col-form-label"></label>
                    <div class = "col-md-8">
                        <input asp-for = "Password" placeholder = "Lösenord" class = "form-control" />
                        <span asp-validation-for = "Password" class = "text-danger"></span>
                    </div>
                </div>
            
                <div class = "my-3 form-group row">
                    <label asp-for = "ConfirmPassword" class = "col-md-4 col-form-label"></label>
                    <div class = "col-md-8">
                        <input asp-for = "ConfirmPassword" placeholder = "Bekräfta lösenord" class = "form-control" />
                        <span asp-validation-for = "ConfirmPassword" class = "text-danger"></span>
                    </div>
                </div>

                <div class = "my-3 form-group row">
                    <label asp-for = "FirstName" class = "col-md-4 col-form-label"></label>
                    <div class = "col-md-8">
                        <input asp-for = "FirstName" placeholder = "Förnamn" class = "form-control" />
                        <span asp-validation-for = "FirstName" class = "text-danger"></span>
                    </div>
                </div>

                <div class = "my-3 form-group row">
                    <label asp-for = "LastName" class = "col-md-4 col-form-label"></label>
                    <div class = "col-md-8">
                        <input asp-for = "LastName" placeholder = "Efternamn" class = "form-control" />
                        <span asp-validation-for = "LastName" class = "text-danger"></span>
                    </div>
                </div>
           
                <div class = "my-3 form-group-row">
                    <div class = "col-sm-12">
                        <div class = "form-check">
                            <input asp-for = "AcceptUserAgreement" class = "form-check-input" />
                            <label asp-for = "AcceptUserAgreement" class = "form-check-label">Jag accepterar skolans<a href = "#"> villkor</a> och <a href = "#">integritetspolicy</a></label>
                        </div> 
                    </div>
                </div>
                <div class = "my-3 form-group-row">
                    <input type = "submit" value = "Lägg till" class = "btn btn-primary" />
                </div>
            </form>

        </div>
        <div class="modal-footer">
       
        
        </div>
    </div>
</div>
