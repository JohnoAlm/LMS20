@model CoursesViewModel

<!-- Modal View -->
@{ var course = new CreateCoursePartialViewModel{}; }
<partial name="CreateCoursePartial" model="@course"/>

<div class="row">
<div class="col-2">

    <!-- Nav-bar -->
    <div class="msb" id="msb">
	    <nav class="navbar navbar-default" role="navigation">
            <div class="side-menu-container">

	            <ul class="nav navbar-nav central">
		            <li>
                        <a class="nav-link text-black" data-bs-toggle="modal" data-bs-target="#exampleModal" href="">
                            <i class="central bi bi-mortarboard-fill"></i>
                            <div class="central-text">Skapa ny kurs</div>
                        </a>             
                    </li>
                    <li>
                        <a asp-action="Participants" class="nav-link text-black">
                            <i class="central bi bi-person-fill"></i>
                            <div class="central-text">Lägg till ny lärare</div>
                        </a>
                    </li>
	            </ul>

            </div>
        </nav>  
    </div>

</div>

<div class="col-10" id="courses-list">

    <h1>Kurser</h1>
    <hr />

@{
    bool isFound = false;
    foreach(var item in Model.courses) {

        if(item.StartDateTime < DateTime.Now && item.EndTime > DateTime.Now) {

            if(!isFound) { 
                <span class="coursegroup">Pågående</span> 
                isFound = true; 
            }
            
            item.CourseStatus = LMS20.Core.Status.Current;
            <partial name="CoursePartial" model="@item"/>
        }
    }

    isFound = false;
    foreach(var item in Model.courses) {

        if(item.StartDateTime > DateTime.Now) {

            if(!isFound) { 
                        <span class="coursegroup">Kommande</span>
                        isFound = true; 
            }

            item.CourseStatus = LMS20.Core.Status.Comming;
            <partial name="CoursePartial" model="@item"/>
        }
    }

    isFound = false;
    foreach(var item in Model.courses) {

        if(item.EndTime < DateTime.Now) {

            if(!isFound) { 
                <span class="coursegroup">Avslutade</span> 
                isFound = true; 
            }
            
            item.CourseStatus = LMS20.Core.Status.Completed;
            <partial name="CoursePartial" model="@item"/>
        }
    }
}

</div>
</div>

            @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}